<?xml version="1.0" encoding="UTF-8"?>
<themeConfig>
   <name>the blackboard</name>
   <applicationName>theBlackboard</applicationName>
   <applicationVersion>0.1</applicationVersion>
   <themeSwfUrl>main.swf</themeSwfUrl>
   <clipFactoryType>library</clipFactoryType>

   <stageSizeConstraints>
     <minWidth>430</minWidth>
     <minHeight>380</minHeight>
   </stageSizeConstraints>

   <layoutRules>
      <containerRule>
         <containerId>mainContainer</containerId>
         <scaleGrid>
            <gridType>centerStatic</gridType>
            <center>
               <elementName>content</elementName>
            </center>
         </scaleGrid>
      </containerRule>
      <containerRule>
         <containerId>toolbarContainer</containerId>
         <scaleGrid>
            <gridType>bordersStatic</gridType>
            <bottom>
               <elementName>content</elementName>
            </bottom>
         </scaleGrid>
      </containerRule>
   </layoutRules>
</themeConfig>
